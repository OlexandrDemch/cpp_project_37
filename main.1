#include <iostream>

class Fraction {
private:
    int numerator;
    int denominator;

public:
    // Конструктор класу
    Fraction(int num, int den) : numerator(num), denominator(den) {
        // Перевірка на 0 у знаменнику
        if (denominator == 0) {
            std::cerr << "Error: Denominator cannot be zero." << std::endl;
            exit(1);
        }
    }

    // Перевантаження оператора додавання (+)
    Fraction operator+(const Fraction& other) const {
        int resultNumerator = numerator * other.denominator + other.numerator * denominator;
        int resultDenominator = denominator * other.denominator;
        return Fraction(resultNumerator, resultDenominator);
    }

    // Перевантаження оператора віднімання (-)
    Fraction operator-(const Fraction& other) const {
        int resultNumerator = numerator * other.denominator - other.numerator * denominator;
        int resultDenominator = denominator * other.denominator;
        return Fraction(resultNumerator, resultDenominator);
    }

    // Перевантаження оператора множення (*)
    Fraction operator*(const Fraction& other) const {
        int resultNumerator = numerator * other.numerator;
        int resultDenominator = denominator * other.denominator;
        return Fraction(resultNumerator, resultDenominator);
    }

    // Перевантаження оператора ділення (/)
    Fraction operator/(const Fraction& other) const {
        // Перевірка на 0 у чисельнику other
        if (other.numerator == 0) {
            std::cerr << "Error: Division by zero." << std::endl;
            exit(1);
        }
        int resultNumerator = numerator * other.denominator;
        int resultDenominator = denominator * other.numerator;
        return Fraction(resultNumerator, resultDenominator);
    }

    // Функція для виведення дробу
    void display() const {
        std::cout << numerator << "/" << denominator;
    }
};

int main() {
    // Приклад використання класу Fraction
    Fraction fraction1(1, 2);
    Fraction fraction2(3, 4);

    Fraction sum = fraction1 + fraction2;
    Fraction difference = fraction1 - fraction2;
    Fraction product = fraction1 * fraction2;
    Fraction quotient = fraction1 / fraction2;

    std::cout << "Sum: ";
    sum.display();
    std::cout << std::endl;

    std::cout << "Difference: ";
    difference.display();
    std::cout << std::endl;

    std::cout << "Product: ";
    product.display();
    std::cout << std::endl;

    std::cout << "Quotient: ";
    quotient.display();
    std::cout << std::endl;

    return 0;
}
